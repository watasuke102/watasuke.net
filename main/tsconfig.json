{
  "extends": "@watasuke.net/config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/components/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@mytypes/*": [
        "src/types/*"
      ],
      "@config": [
        "config.ts"
      ]
    },
    "typeRoots": [
      "src/types"
    ]
  },
  "include": [
    "./src/**/*",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./plugins/**/*"
  ],
  "exclude": [
    "node_modules",
    ".cache",
    "public",
    "api",
    "webpack.config.js",
    "sample-env.ts"
  ]
}
