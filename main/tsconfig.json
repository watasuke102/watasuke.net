{
  "extends": "@watasuke.net/config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@utils/*": [ "src/utils/*" ],
      "@assets/*": [ "src/assets/*" ],
      "@mytypes/*": [ "src/types/*" ],
      "@pages/*": [ "src/components/pages/*" ],
      "@common/*": [ "src/components/common/*" ],
      "@feature/*": [ "src/components/feature/*" ],
    },
    "typeRoots": [
      "src/types"
    ]
  },
  "include": [
    "./src/**/*",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./plugins/**/*"
  ],
  "exclude": [
    "node_modules",
    ".cache",
    "public",
    "api",
    "webpack.config.js",
    "sample-env.ts"
  ]
}
