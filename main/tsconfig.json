{
  "extends": "@watasuke.net/config/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@utils/*": [ "./src/utils/*" ],
      "@assets/*": [ "./src/assets/*" ],
      "@data/*": [ "./src/data/*" ],
      "@mytypes/*": [ "./src/types/*" ],
      "@pages/*": [ "./src/components/pages/*" ],
      "@common": [ "./src/components/common" ],
      "@feature/*": [ "./src/components/feature/*" ],
    },
    "typeRoots": [
      "src/types"
    ]
  },
  "include": [
    "./src/**/*",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./plugins/**/*"
  ],
  "exclude": [
    "node_modules",
    ".cache",
    "public",
    "api",
    "webpack.config.js",
    "sample-env.ts"
  ]
}
