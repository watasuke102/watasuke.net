{
  "extends": "@watasuke.net/config/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@utils/*": [
        "./src/utils/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@data/*": [
        "./src/data/*"
      ],
      "@mytypes/*": [
        "./src/types/*"
      ],
      "@pages/*": [
        "./src/components/pages/*"
      ],
      "@common": [
        "./src/components/common"
      ],
      "@feature/*": [
        "./src/components/feature/*"
      ]
    },
    "typeRoots": [
      "./src/types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "../common/src/Heading.d.ts",
    "../common/src/TocMapper",
    "./gatsby-config.ts",
    "./gatsby-node.ts",
    "./plugins/**/*",
    "./src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".cache",
    "public",
    "api",
    "webpack.config.js",
    "sample-env.ts"
  ]
}
