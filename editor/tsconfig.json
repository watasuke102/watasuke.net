{
  "extends": "@watasuke.net/config/tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@cms-utils/*": [
        "./src/utils/*"
      ],
      "@cms-common/*": [
        "./src/common/*"
      ],
      "@cms-assets/*": [
        "./src/assets/*"
      ],
      "@cms-types/*": [
        "./src/types/*"
      ],
      "@watasuke.net/*": [
        "./watasuke.net/src/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/layout.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
