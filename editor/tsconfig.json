{
  "extends": "@watasuke.net/config/tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@features/*": [ "./src/features/*" ],
      "@common/*": [ "./src/common/*" ],
      "@utils/*": [ "./src/utils/*" ],
      "@assets/*": [ "./src/assets/*" ],
      "@mytypes/*": [ "./src/types/*" ],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/layout.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
